<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="/end">首页</a></li>
            <li>文字</li>
            <li class="active">{{title}}</li>
        </ol>

        <!--面板-->
        <h1 class="page-title">{{title}}</h1>

        {{#each topics}}
        <div class="col-md-6">
            <div class="panel panel-default wq-panel">
                <div class="panel-heading">
                    {{name}}
                    <div class="fr">
                        <a class="fui-cross" href="/end/topicdel/{{_id}}"></a>
                    </div>    
                </div>
                <div class="panel-body">
                    <h2>{{title}}</h2>
                    {{#each content}}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form method="post" class="form-horizontal" action="/end/topicadd">
                        <div class="form-group">
                            <label class="control-label col-md-2">分类</label>
                            <div class="col-md-10">
                                <input name="name" type="text" class="form-control" placeholder="name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">页面标题</label>
                            <div class="col-md-10">
                                <input name="title" type="text" class="form-control" placeholder="title" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">标语</label>
                            <div class="col-md-10">
                                <input name="content[0]" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">标语</label>
                            <div class="col-md-10">
                                <input name="content[1]" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">标语</label>
                            <div class="col-md-10">
                                <input name="content[2]" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <input class="btn btn-primary btn-lg btn-block" type="submit" value="添加"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

